{
	"compilerOptions": {
		"target": "ES5",
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noImplicitAny": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"lib": [
			"ES2020",
			"DOM"
		],
		"skipLibCheck": true,
		"declaration": true
	},
	"include": [
		"./src"
	],
	"exclude": [
		"./node_modules",
	]
}